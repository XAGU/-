<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:paddingTop="9dp"
    android:paddingBottom="9dp">

    <ImageView
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/ic_bathroom_status_success" />
    <TextView
        android:id="@+id/tv_status"
        tools:text="预约中"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_status"
        android:layout_alignTop="@id/iv_status"
        android:textColor="@color/colorDark2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_right"
        android:text="@string/cancel"
        android:layout_marginEnd="14dp"
        android:textColor="@color/colorDarkB"
        android:layout_alignParentRight="true"
        android:layout_marginTop="11dp"
        android:textSize="@dimen/sp12"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_below="@id/tv_status"
        android:id="@+id/tip"
        android:visibility="gone"
        android:textSize="12sp"
        android:textColor="@color/colorDark6"
        tools:visibility="visible"
        android:layout_alignLeft="@id/tv_status"
        tools:text="请确保你钱中可用余额为xx元"/>
</RelativeLayout>
