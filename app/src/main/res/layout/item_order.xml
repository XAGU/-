<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/content_border"
    android:orientation="horizontal">

    <View
        android:id="@+id/v_type"
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:background="#fe557d" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="19dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="19dp">


        <TextView
            android:id="@+id/tv_time"
            style="@style/ContentText_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_device"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_amount"
            style="@style/ContentText_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/tv_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentText_title"
            android:layout_toLeftOf="@id/tv_amount"
            android:text="-"/>

        <TextView
            android:layout_toLeftOf="@id/tv_minus"
            android:id="@+id/tv_device"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignParentLeft="true"
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
