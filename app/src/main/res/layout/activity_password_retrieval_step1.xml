<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/mainMarginLeftRight"
        android:paddingRight="@dimen/mainMarginLeftRight"
        android:paddingTop="14dp"
        android:src="@drawable/back" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="24dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/mainMarginLeftRight"
        android:paddingRight="@dimen/mainMarginLeftRight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码找回"
            android:textColor="#222"
            android:textSize="19sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/mainMarginLeftRight"
        android:paddingRight="@dimen/mainMarginLeftRight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#ff5555"
                android:textSize="14sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/et_mobile"
                style="@style/EditTextLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:drawableBottom="@drawable/line"
                android:hint="@string/mobile_hint"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="@integer/phone_max_length"
                android:maxLines="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="验证码"
                android:textColor="#ff5555"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_verification_code"
                    style="@style/EditTextLogin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:drawableBottom="@drawable/line"
                    android:hint="@string/verification_code_hint"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1" />

                <Button
                    android:id="@+id/bt_send_verification_code"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="72dp"
                    android:layout_height="29dp"
                    android:layout_alignRight="@+id/et_verification_code"
                    android:layout_centerVertical="true"
                    android:background="@drawable/verification_code_1"
                    android:padding="0dp"
                    android:text="获取验证码"
                    android:textColor="#ff5555"
                    android:textSize="11sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="21dp"
                android:paddingTop="21dp"
                android:text="@string/user_protocal_tip"
                android:textColor="#aaa"
                android:textSize="11sp" />

            <Button
                android:id="@+id/bt_submit"
                style="@style/Button"
                android:layout_marginTop="13dp"
                android:enabled="false"
                android:text="下一步" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
