<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:id="@+id/rl_main"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/fragment"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/color_bg_main_table"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/home_rl"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tab_home_nor"
                android:id="@+id/home_image"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/social_rl"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="26dp"
                android:layout_height="27dp"
                android:layout_centerInParent="true"
                android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tab_social_nor"
                android:id="@+id/social_image"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:layout_width="8.5dp"
                android:layout_height="8.5dp"
                android:id="@+id/social_red"
                android:background="@drawable/red_soild_circle"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                tool:visibility="visible"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="65dp"
                android:layout_height="29dp"
                android:layout_centerInParent="true"
                android:id="@+id/social_sel_rl"
                android:visibility="visible"
                tool:visibility="visible"
                android:background="@drawable/table_social_sel">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:src="@drawable/add"
                    android:visibility="visible"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/personal_rl">

            <RelativeLayout
                android:layout_width="25dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tab_personal_nor"
                android:id="@+id/personal_image"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:layout_width="8.5dp"
                android:layout_height="8.5dp"
                android:background="@drawable/red_soild_circle"
                android:layout_alignParentRight="true"
                android:id="@+id/personal_red"
                android:visibility="gone"
                tool:visibility="visible"/>
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>