<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_collapseMode="pin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#222"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:drawableEnd="@drawable/arrow_down"
                android:drawablePadding="6dp"
                android:text="123公寓4栋" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mainMarginLeftRight"
                android:src="@drawable/ic_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginEnd="@dimen/mainMarginLeftRight"
                android:layout_marginStart="@dimen/mainMarginLeftRight"
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorDarke"
                android:visibility="visible" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_below="@id/tool_bar"
        android:layout_marginEnd="@dimen/mainMarginLeftRight"
        android:layout_marginStart="@dimen/mainMarginLeftRight"
        android:orientation="horizontal"
        android:layout_height="42dp"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <View
                android:background="@drawable/bg_bathroom_item_available"
                android:layout_width="13dp"
                android:layout_height="13dp"/>
            <TextView
                android:layout_marginStart="6dp"
                android:text="可选"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorDark9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <View
                android:background="@drawable/bg_bathroom_item_using"
                android:layout_width="13dp"
                android:layout_height="13dp"/>
            <TextView
                android:layout_marginStart="6dp"
                android:text="使用中"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorDark9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <View
                android:background="@drawable/bg_bathroom_item_choosed"
                android:layout_width="13dp"
                android:layout_height="13dp"/>
            <TextView
                android:layout_marginStart="6dp"
                android:text="选中"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorDark9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <View
                android:background="@drawable/bg_bathroom_item_error"
                android:layout_width="13dp"
                android:layout_height="13dp"/>
            <TextView
                android:layout_marginStart="6dp"
                android:text="异常"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/colorDark9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="39dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/ll_left"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_bathroom_buy_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="购买编码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_bathroom_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="扫一扫"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <com.xiaolian.amigo.ui.widget.ZoomRecyclerView
        android:overScrollMode="never"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/ll_top"
        android:background="@color/colorBackgroundGray"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>