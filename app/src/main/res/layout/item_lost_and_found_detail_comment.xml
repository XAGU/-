<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            tools:src="@drawable/default_avatar"
            android:layout_gravity="center_horizontal"
            android:id="@+id/iv_avatar"
            android:layout_width="43dp"
            android:layout_height="43dp" />
        <RelativeLayout
            android:id="@+id/rl_author_info"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_comment_author"
                android:textSize="12sp"
                android:textColor="@color/colorDark2"
                tools:text="TB009527"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_below="@id/tv_comment_author"
                tools:text="今天13:19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_owner"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/tv_comment_author"
                android:background="@drawable/bg_lost_and_found_stroke_gray"
                android:text="失主"
                android:textSize="9dp"
                android:gravity="center"
                android:textColor="#999"
                android:layout_width="25dp"
                android:layout_height="14dp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_replay"
            android:background="@drawable/bg_lost_and_found_reply"
            android:text="回复评论"
            android:textSize="12dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="53dp"
            android:layout_height="21dp" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_marginTop="4dp"
        tools:text="这里是用户回复的内容，根据内容的多少自动换行，没有则不显示"
        android:layout_marginStart="50dp"
        android:textColor="@color/colorDark2"
        android:lineSpacingExtra="6dp"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.RecyclerView
        android:paddingTop="9dp"
        android:paddingBottom="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="14dp"
        android:id="@+id/recyclerView"
        android:layout_marginTop="6dp"
        android:background="#f5f5f5"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>