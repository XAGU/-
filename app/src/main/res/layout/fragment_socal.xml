<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.xiaolian.amigo.ui.lostandfound.SocalFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_gray_f8"
        android:id="@+id/title_fl"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/social_normal_rl"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        >
        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginStart="21dp"
            android:src="@drawable/icon_search"
            android:id="@+id/search"
            android:layout_centerVertical="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笑联"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:id="@+id/title"
            android:gravity="center"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_more"
            android:id="@+id/more"
            android:layout_marginEnd="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
        
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_rl"
            tools:visibility="gone"
            android:visibility="gone"
            android:background="@color/color_bg_gray_f8">
        
            <TextView
                android:layout_width="276dp"
                android:layout_height="29dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/social_search_tv_bg"
                android:paddingLeft="14dp"
                android:id="@+id/search_txt"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorDarkB"
                android:hint="@string/social_search_hint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_centerVertical="true"
                android:layout_alignRight="@id/search_txt"
                android:textSize="13sp"
                android:layout_marginStart="14dp"
                android:textColor="@color/colorDark2"/>
        </RelativeLayout>

    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none"
        android:paddingStart="21dp"
        android:layout_marginTop="6dp"
        android:id="@+id/social_tags"/>
    

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:id="@+id/title_border"
        android:background="@color/colorDarke" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:id="@+id/circle_doit"
        android:layout_marginTop="22dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal">

    </LinearLayout>
</LinearLayout>
