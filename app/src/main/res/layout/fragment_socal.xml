<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context="com.xiaolian.amigo.ui.lostandfound.SocalFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_gray_f8"
        android:id="@+id/title_fl"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/social_normal_rl"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="21dp"
            android:paddingEnd="20dp"
            android:src="@drawable/icon_search"
            android:id="@+id/search"
            android:layout_centerVertical="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="笑联"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:id="@+id/title"
            android:gravity="center"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_more"
            android:id="@+id/more"
            android:layout_marginEnd="21dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
        
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/search_rl"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_marginStart="21dp"
            android:background="@color/color_bg_gray_f8">
        
            <EditText
                android:layout_width="276dp"
                android:layout_height="29dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/social_search_tv_bg"
                android:paddingLeft="14dp"
                android:textSize="13sp"
                android:id="@+id/search_txt"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorDarkB"
                android:textColor="@color/colorDark2"
                android:hint="@string/social_search_hint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/search_txt"
                android:textSize="13sp"
                android:id="@+id/cancel_search"
                android:paddingStart="14dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorDark2"/>
        </RelativeLayout>

    </FrameLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none"
        android:layout_marginStart="21dp"
        android:layout_marginTop="6dp"
        android:id="@+id/social_tags"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:id="@+id/title_border"
        android:background="@color/colorDarke" />


            <com.scwang.smartrefresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mainMarginLeftRight"
                android:layout_marginRight="@dimen/mainMarginLeftRight"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/rl_empty"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:background="@color/colorBackgroundGray"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_empty_tip"
                            android:textSize="14sp"
                            android:text="@string/empty_tip"
                            android:textColor="@color/colorDark2"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="14dp"
                            android:layout_above="@id/tv_empty_tip"
                            android:src="@drawable/ic_empty_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rl_error"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:background="@color/colorBackgroundGray"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_error_tip"
                            android:textSize="14sp"
                            android:text="@string/network_available_error_tip"
                            android:textColor="@color/colorDark2"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="14dp"
                            android:layout_above="@id/tv_error_tip"
                            android:src="@drawable/ic_error_ballon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:text="热门联子"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorDark2"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:id="@+id/social_recy" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="28dp"
                            android:text="最新联子"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorDark2"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:id="@+id/social_new" />
                    </LinearLayout>
                </FrameLayout>
            </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>