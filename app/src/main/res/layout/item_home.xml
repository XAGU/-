<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shower">

    <!--android:clipToPadding="true"-->
    <!-- TODO: 居中显示 -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="22dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_device_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="热水器"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/itemMainText"
            android:textStyle="bold" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_toLeftOf="@id/tv_device_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp">
            <com.xiaolian.amigo.ui.widget.DotFlashView
                android:id="@+id/dfv_dot"
                app:firstColor="#44ffffff"
                app:secondColor="#ffffffff"
                android:layout_width="35dp"
                android:layout_height="7dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_prepay"
            android:layout_toLeftOf="@id/tv_device_title"
            android:layout_alignBaseline="@id/tv_device_title"
            android:layout_marginRight="5dp"
            android:textColor="@color/white"
            tool:text="有1笔"
            android:textSize="11sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_gravity="right"
            android:layout_below="@id/tv_device_title"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAKE A SHOWER"
            android:textColor="#ffb6c5"
            android:textSize="11sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
