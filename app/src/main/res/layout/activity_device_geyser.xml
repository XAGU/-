<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_background"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:fitsSystemWindows="true"-->
    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@drawable/bg_rect_red"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <include
            android:layout_width="match_parent"
            android:layout_height="42dp"
            layout="@layout/view_device_toolbar"
            />
        <TextView
            android:textSize="12sp"
            android:text="已连接热水器：ZLG9021P"
            android:textColor="#8fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.xiaolian.amigo.component.BezierWaveView
            android:layout_alignParentBottom="true"
            android:id="@+id/bsv_wave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="16dp"
                android:id="@+id/tv_money_pay"
                android:drawableBottom="@drawable/line_red"
                android:drawablePadding="5dp"
                android:text="余额支付"
                android:gravity="center"
                android:textColor="#222"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="16dp"
                android:id="@+id/tv_bonus_pay"
                android:drawablePadding="5dp"
                android:text="红包支付"
                android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_marginTop="18dp"
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#eee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_pay_way"
            android:background="@drawable/bg_tag_onclick"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >

            <TextView
                android:layout_marginLeft="@dimen/mainMarginLeftRight"
                android:id="@+id/tv_water_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="预计用水量" />


            <ImageView
                android:id="@+id/imageView2"
                style="@style/ListItemImage"
                android:layout_marginRight="@dimen/mainMarginLeftRight"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_water_right"
                android:textSize="12sp"
                android:textColor="#ff5555"
                android:layout_toLeftOf="@id/imageView2"
                android:text="预付10元／1吨水" />

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dip"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:background="#eee" />-->

        </RelativeLayout>

        <View
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#eee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/bt_pay"
            style="@style/Rect_button"
            android:text="确认支付"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/ll_content_unconnected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:textColor="#bbb"
            android:textSize="10sp"
            android:text="(消费金额以实际用水量为准)"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#ff5555"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="14sp"
            android:text="以预付10元，请尽快放水洗澡（100s）"
            android:textColor="#ff5555"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <View
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#ff5555"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/bt_reconnect"
            style="@style/Rect_button"
            android:text="重新连接"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:id="@+id/ll_content_shower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="#bbb"
            android:textSize="10sp"
            android:text="(消费金额以实际用水量为准)"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="23dp"
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#ff5555"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="14sp"
            android:text="与热水器断开连接，请重连"
            android:textColor="#ff5555"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>
        <View
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#ff5555"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <Button
            android:id="@+id/bt_stop_shower"
            style="@style/Rect_button"
            android:text="结束洗澡"
            />
    </LinearLayout>


</LinearLayout>