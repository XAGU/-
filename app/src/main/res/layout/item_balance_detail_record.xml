<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:background="@drawable/content_border"
        android:paddingBottom="18dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="18dp">

        <TextView
            android:id="@+id/tv_bill_type"
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            tools:text="提现" />

        <TextView
            android:id="@+id/tv_bill_time"
            style="@style/ContentText_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bill_type"
            android:layout_marginTop="10dp"
            android:text="今天12:30" />

        <TextView
            android:id="@+id/tv_bill_money"
            style="@style/ContentText_title"
            android:textColor="@color/colorFullRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="+￥12" />
        <TextView
            android:id="@+id/tv_bill_status"
            style="@style/ContentText_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_bill_money"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:text="提现成功" />

        <TextView
            android:id="@+id/tv_bill_Status_only"
            style="@style/ContentText_title"
            android:textColor="@color/colorFullRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:visibility="gone"
            tools:text="审核未通过" />

    </RelativeLayout>

</LinearLayout>