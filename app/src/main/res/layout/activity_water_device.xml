<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cl_background"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:fitsSystemWindows="true"-->
    <RelativeLayout
        android:id="@+id/rl_header"
        android:background="@drawable/bg_rect_red"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <include
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            layout="@layout/view_device_toolbar"
            />
        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_below="@id/toolbar"
            android:textSize="12sp"
            android:text="切换宿舍"
            android:textColor="#8fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.xiaolian.amigo.ui.widget.BezierWaveView
            android:layout_alignParentBottom="true"
            android:id="@+id/bsv_wave"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            />
        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/ic_shower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_content_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="16dp"
                android:paddingBottom="18dp"
                android:id="@+id/tv_money_pay"
                android:drawableBottom="@drawable/line_red"
                android:drawablePadding="5dp"
                android:text="余额支付"
                android:gravity="center"
                android:textColor="#222"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:paddingTop="16dp"
                android:paddingBottom="18dp"
                android:id="@+id/tv_bonus_pay"
                android:drawablePadding="5dp"
                android:text="红包支付"
                android:gravity="center"
                android:textColor="@color/colorTextGray"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#eee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_pay_way"
            android:background="@drawable/bg_tag_onclick"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            >

            <TextView
                android:layout_marginLeft="@dimen/mainMarginLeftRight"
                android:id="@+id/tv_water_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#222"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:text="预计用水量" />


            <ImageView
                android:id="@+id/imageView2"
                style="@style/ListItemImage"
                android:layout_marginRight="@dimen/mainMarginLeftRight"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrow_right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:id="@+id/tv_water_right"
                android:textSize="12sp"
                android:textColor="#ff5555"
                android:layout_toLeftOf="@id/imageView2"
                android:text="预付5元／1吨水" />

            <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dip"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="#eee" />-->

        </RelativeLayout>

        <View
            android:layout_marginLeft="@dimen/mainMarginLeftRight"
            android:layout_marginRight="@dimen/mainMarginLeftRight"
            android:background="#eee"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <Button
            android:id="@+id/bt_pay"
            style="@style/Rect_button"
            android:text="确认支付"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/ll_content_unconnected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">

        <com.xiaolian.amigo.ui.widget.DotFlashView
            android:id="@+id/dfv_dot"
            app:firstColor="#4cff5555"
            app:secondColor="#ff5555"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <TextView
            android:id="@+id/tv_connect_status"
            android:layout_marginTop="20dp"
            android:text="正在连接设备, 请稍后"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#ff5555"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="#999"
            android:textSize="10sp"
            android:text="请靠近设备"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="20dp"
            android:background="#f3f3f3"
            android:layout_gravity="center_horizontal"
            android:layout_width="12dp"
            android:layout_height="2dp"/>

        <Button
            android:enabled="false"
            style="@style/Rect_button"
            android:text="重新连接"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:id="@+id/ll_content_connect_failed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">

        <com.xiaolian.amigo.ui.widget.DotFlashView
            app:firstColor="#4cff5555"
            app:secondColor="#ff5555"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>


        <TextView
            android:layout_marginTop="20dp"
            android:text="与设备连接失败"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#ff5555"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="#999"
            android:textSize="10sp"
            android:text="请靠近设备"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="20dp"
            android:background="#f3f3f3"
            android:layout_gravity="center_horizontal"
            android:layout_width="12dp"
            android:layout_height="2dp"/>

        <Button
            android:id="@+id/bt_reconnect"
            style="@style/Rect_button"
            android:text="重新连接"
            />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:id="@+id/ll_content_shower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shower_payed"
            android:layout_gravity="center_horizontal"
            tool:text="已预付10元"
            android:textColor="#ff5555"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/trade_above_tip"
            android:textColor="#999"
            android:textSize="10sp"
            android:layout_marginTop="13dp"
            android:text="(100s)内未打开放水阀门，系统将自动停止本次服务"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/trade_below_tip"
            android:textColor="#999"
            android:textSize="10sp"
            android:layout_marginTop="8dp"
            android:text="消费金额以实际用水量为准"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="20dp"
            android:background="#f3f3f3"
            android:layout_gravity="center_horizontal"
            android:layout_width="12dp"
            android:layout_height="2dp"/>

        <Button
            android:enabled="true"
            android:id="@+id/bt_stop_shower"
            style="@style/Rect_button"
            android:text="结束用水"
            />
    </LinearLayout>

</LinearLayout>