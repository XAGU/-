<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/content_border"
        android:orientation="vertical"
        android:paddingBottom="21dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_amount"
            style="@style/TextWalletDetailMoney"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/tv_status"
            android:textSize="14sp"
            android:gravity="center"
            tool:text="test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:id="@+id/tv_reason_top"
            android:visibility="gone"
            android:textSize="10sp"
            tool:text="test"
            tool:visibility="visible"
            android:textColor="@color/colorDark9"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_cancel_withdraw"
            android:layout_marginTop="9dp"
            android:textColor="@color/colorGreen"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_cancel_withdraw"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/cancel_withdraw"
            android:layout_width="62dp"
            android:layout_height="21dp" />
    </LinearLayout>
    
    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:id="@+id/ll_reason"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:background="@drawable/content_border"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_reason"
            android:textColor="@color/colorDark2"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_reason_content"
            android:textColor="@color/colorDark9"
            android:textSize="11sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:background="@drawable/content_border"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:id="@+id/recyclerView"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorBackgroundWhite"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/left_oper"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="常见问题"
            android:textColor="#45b0ff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#eee" />

        <TextView
            android:id="@+id/right_oper"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我要投诉"
            android:textColor="#45b0ff"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>