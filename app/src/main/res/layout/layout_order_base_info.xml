<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:id="@+id/rl_user_style"
        android:visibility="gone"
        tool:visibility="visible">

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/user_style"
            />

        <TextView
            android:id="@+id/tv_method"
            style="@style/ContentText_main"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/use_time_colon" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/ContentText_main"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/user_time_end" />

        <TextView
            android:id="@+id/tv_time_end"
            style="@style/ContentText_main"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_used_time"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/used_time_colon" />

        <TextView
            android:id="@+id/tv_used_time"
            style="@style/ContentText_main"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            android:id="@+id/tv_location_title"
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/device_location_colon" />

        <TextView
            android:id="@+id/tv_device_location"
            android:layout_toEndOf="@id/tv_location_title"
            style="@style/ContentText_main"
            android:textSize="12sp"
            android:gravity="right"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/order_number_colon" />

        <TextView
            android:id="@+id/tv_copy"
            android:text="@string/copy"
            android:gravity="center"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorBlue"
            android:paddingStart="7dp"
            android:paddingEnd="0dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <View
            android:id="@+id/v_divide"
            android:layout_toStartOf="@id/tv_copy"
            android:layout_marginStart="7dp"
            android:background="#e5e5e5"
            android:layout_centerVertical="true"
            android:layout_width="1dp"
            android:layout_height="14dp"/>

        <TextView
            android:layout_toStartOf="@id/v_divide"
            android:id="@+id/tv_order_no"
            style="@style/ContentText_main"
            android:textSize="10sp"
            android:textColor="#666"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>
