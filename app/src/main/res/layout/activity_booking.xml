<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/colorBackgroundGray"
    >

    <android.support.v4.widget.NestedScrollView xmlns:tool="http://schemas.android.com/tools"
        android:id="@+id/sv_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="42dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_toolbar_title"
                    style="@style/ToolBarTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/toolBarMarginBottom"
                    android:layout_marginLeft="@dimen/toolBarMarginLeft"
                    android:layout_marginRight="@dimen/toolBarMarginLeft"
                    android:text="预约使用"
                    />
                <TextView
                    android:visibility="gone"
                    tool:visibility="visible"
                    android:text="购买记录"
                    android:id="@+id/tv_toolbar_sub_title"
                    android:textColor="@color/colorDark2"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:paddingEnd="@dimen/toolBarMarginLeft"
                    android:paddingStart="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_main_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/mainMarginLeftRight"
                android:layout_marginRight="@dimen/mainMarginLeftRight"
                android:orientation="vertical" >
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/colorDark6"
                    android:text="每月失约3次将无法预约，已失约2次"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.xiaolian.amigo.ui.widget.BathroomOperationStatusView
                    android:layout_marginTop="21dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_marginTop="14dp"
                    android:layout_marginBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_centerInParent="true"
                        android:text="预约使用说明"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginEnd="29dp"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/tv_tip"
                        android:background="#e9e9e9"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>
                    <View
                        android:layout_marginStart="29dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/tv_tip"
                        android:background="#e9e9e9"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>
                </RelativeLayout>
                <TextView
                    android:text="@string/cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:background="@color/colorBackgroundGray"
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp15"
            android:textStyle="bold"
            android:textColor="#222"
            android:text="预约使用"
            android:visibility="gone"
            />


        <View
            android:id="@+id/view_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d6d6d6"/>
    </RelativeLayout>
</FrameLayout>