<?xml version="1.0" encoding="utf-8"?>
<com.xiaolian.amigo.ui.widget.FormLayout2 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:textColor="#ff5555"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.xiaolian.amigo.ui.widget.ClearableEditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/line"
        android:hint="@string/mobile_hint"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="@integer/phone_max_length"
        android:maxLines="1"
        android:gravity="center_vertical"
        style="@style/EditTextLogin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="密码"
        android:textColor="#ff5555"
        android:textSize="14sp"
        android:textStyle="bold" />

    <com.xiaolian.amigo.ui.widget.PasswordEditText
        android:id="@+id/et_userpwd"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:drawableBottom="@drawable/line"
        android:drawableEnd="@drawable/pwd_eye_open"
        android:drawableRight="@drawable/pwd_eye_open"
        android:hint="@string/password_hint"
        android:imeOptions="actionNext"
        android:inputType="textPassword"
        android:ellipsize="start"
        android:maxLength="@integer/password_max_length"
        style="@style/EditTextLogin"
        android:singleLine="true" />

    <TextView
        android:id="@+id/tv_password_retrieval_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="21dp"
        android:paddingBottom="21dp"
        android:text="@string/forget_password_tip"
        android:textColor="#aaa"
        android:textSize="11sp" />

    <Button
        android:enabled="false"
        style="@style/Button"
        android:id="@+id/bt_submit"
        android:layout_marginTop="13dp"
        android:text="登录"
        />
</com.xiaolian.amigo.ui.widget.FormLayout2>
