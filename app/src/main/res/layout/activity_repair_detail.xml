<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackgroundGray">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_repair_progresses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorBackgroundWhite"
                    android:paddingBottom="7dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="7dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_progress"
                android:layout_marginTop="14dp"
                android:background="@color/colorBackgroundWhite"
                android:orientation="vertical"
                android:paddingBottom="21dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="21dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设备类型："
                        android:textColor="#222"
                        android:textSize="12sp"
                        />

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#222"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="设备位置："
                        android:textColor="#222"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        tools:text="男寝1楼102"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="#222"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        android:text="报修内容："
                        android:textColor="#222"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="21dp"
                        tools:text="这里是用户输入的内容"
                        android:textColor="#222"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_images"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="21dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_first"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_vertical"
                        android:background="#ddd"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <!--android:scaleType="fitXY"-->
                    <ImageView
                        android:id="@+id/iv_second"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="#ddd"
                        android:scaleType="centerCrop"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_third"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:background="#ddd"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@id/ll_content"
                android:id="@+id/ll_extra"
                android:layout_marginTop="14dp"
                android:visibility="gone"
                android:paddingBottom="21dp"
                android:background="@color/colorBackgroundWhite"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="21dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_extra_title"
                    android:text="评价信息"
                    android:textColor="#222"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_extra_content1"
                    android:layout_marginTop="10dp"
                    android:text="5分"
                    android:textColor="@color/colorFullRed"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_extra_content2"
                    android:layout_marginTop="10dp"
                    android:text="主动联系"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ll_extra"
                android:id="@+id/ll_bottom"
                android:layout_marginBottom="21dp"
                android:layout_marginTop="14dp"
                android:background="@color/colorBackgroundWhite"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/left_oper"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="常见问题"
                    android:textColor="#45b0ff"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#eee" />

                <TextView
                    android:id="@+id/right_oper"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="联系客服"
                    android:textColor="#45b0ff"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>