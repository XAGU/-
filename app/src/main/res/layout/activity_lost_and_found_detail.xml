<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="@dimen/mainMarginLeftRight"
    android:paddingRight="@dimen/mainMarginLeftRight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="24dp"
                    android:paddingRight="40dp"
                    android:paddingTop="14dp"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:text="失物详情" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_first"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_gravity="center_vertical"
                    android:background="#ddd"
                    android:scaleType="centerCrop"
                    android:visibility="visible"/>

                <!--android:scaleType="fitXY"-->
                <ImageView
                    android:id="@+id/iv_second"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="#ddd"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_third"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="#ddd"
                    android:scaleType="centerCrop"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_content_title"
                tool:text="我丢失了一把雨伞"
                android:textSize="14sp"
                android:layout_marginTop="14dp"
                android:textColor="@color/colorDark2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_content_desc"
                tool:text="我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞我丢失了一把雨伞"
                android:textSize="14sp"
                android:lineSpacingExtra="5dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/colorDark9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_itemName"
                android:layout_marginTop="14dp"
                android:textColor="@color/colorDark2"
                tool:text="雨伞"
                android:textSize="12sp"
                android:drawableLeft="@drawable/good_icon"
                android:drawableStart="@drawable/good_icon"
                android:drawablePadding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorDark2"
                tool:text="4号教学楼"
                android:textSize="12sp"
                android:drawableLeft="@drawable/location_icon"
                android:drawableStart="@drawable/location_icon"
                android:drawablePadding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_lostTime"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorDark2"
                tool:text="08.11"
                android:textSize="12sp"
                android:drawableLeft="@drawable/time_icon"
                android:drawableStart="@drawable/time_icon"
                android:drawablePadding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorDark2"
                android:textSize="12sp"
                tool:text="联系方式"
                android:drawableLeft="@drawable/contact_icon"
                android:drawableStart="@drawable/contact_icon"
                android:drawablePadding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarke" />

            <TextView
                android:id="@+id/tv_createTime"
                android:textSize="12sp"
                android:layout_marginTop="14dp"
                android:textColor="@color/colorDark9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>