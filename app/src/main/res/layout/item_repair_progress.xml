<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="14dp"
    android:paddingBottom="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/v_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/dot_circle_green"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            tool:text="维修完成"
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/v_dot"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:textColor="#00d3c7"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_toEndOf="@id/tv_status"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            tool:visibility="visible"
            android:id="@+id/tv_cancel_repair"
            android:layout_marginTop="9dp"
            android:textColor="@color/colorGreen"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_cancel_withdraw"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/cancel_repair"
            android:layout_width="62dp"
            android:layout_height="21dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_desc"
        tool:text="你的报修已完成"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#222"/>

    <TextView
        android:id="@+id/tv_time"
        tool:text="2017-11-11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textColor="#222"/>
</LinearLayout>