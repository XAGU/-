<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/tv_title"
        android:textColor="@color/colorDark2"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="oh, my bag..."
        tools:drawableEnd="@drawable/ic_found"
        android:drawablePadding="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:id="@+id/tv_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="14dp"
        android:textSize="12sp"
        android:textColor="@color/colorDark6"
        tools:text="丢了好多东西啊啊啊啊啊啊啊啊啊啊啊啊啊......."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <View
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:background="@color/colorDarke"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_marginStart="21dp"
        android:layout_marginEnd="21dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="38dp">
        <TextView
            android:id="@+id/tv_stat"
            tools:text="4912查看·103回复"
            android:textSize="11sp"
            android:textColor="#aaa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:gravity="end"
            tools:text="今天12:30发布"
            android:textSize="11sp"
            android:textColor="#aaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:background="@color/colorBackgroundGray"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

</LinearLayout>