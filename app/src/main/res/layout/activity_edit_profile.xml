<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!--android:background="@color/colorBackgroundWhite"-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rel_edit_avatar"
        android:onClick="onclick"
        style="@style/ListItemRel"
        android:clickable="true"
       >
        <TextView
            android:id="@+id/text_sys"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="更换头像" />

        <ImageView
            android:id="@+id/imageView1"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/imageView1"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_picture_error" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_nickname"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_wallet"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            />


        <ImageView
            android:id="@+id/imageView2"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView2"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_sex"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_sex"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="性别" />


        <ImageView
            android:id="@+id/imageView3"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:hint="@string/unknown"
            android:gravity="end|center_vertical"
            android:id="@+id/tv_sex"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView3"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_certification"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_certification"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="学生认证" />


        <ImageView
            android:id="@+id/imageView9"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right" />

        <TextView
            android:gravity="end|center_vertical"
            android:id="@+id/tv_certification"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView9"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_school"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_school"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="学校" />


        <ImageView
            android:id="@+id/imageView6"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_school"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView6"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_room"
        android:onClick="onclick"
        style="@style/ListItemRel"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_room"
            style="@style/ListItemMainText"
            android:layout_marginStart="10dp"
            android:text="宿舍信息" />

        <ImageView
            android:id="@+id/imageView7"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:hint="@string/unbind"
            android:id="@+id/tv_residence"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView7"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>
    <TextView
        android:id="@+id/tv_toolbar_title"
        style="@style/ToolBarTextView"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:gravity="center_vertical"
        android:text="安全设置" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />
    <RelativeLayout
        android:id="@+id/rel_edit_mobile"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_mobile"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="手机号" />


        <ImageView
            android:id="@+id/imageView4"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_mobile"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView4"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_edit_password"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_password"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="账号密码" />


        <ImageView
            android:id="@+id/imageView5"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView5"
            android:text="修改密码"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_edit_bathroom_password"
        android:visibility="gone"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/tv_bathroom_password"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="浴室密码" />


        <ImageView
            android:id="@+id/imageView05"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_bathroom_tip"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView05"
            android:text="修改密码"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_wechat_bind"
        android:visibility="visible"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/tv_wechat"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="微信绑定" />


        <ImageView
            android:id="@+id/imageView_wechat"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_wechat_tip"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView_wechat"
            android:text="未绑定"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_pay_bind"
        android:visibility="visible"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/tv_apay"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="支付宝绑定" />


        <ImageView
            android:id="@+id/imageView_apay"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_apay_tip"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView_apay"
            android:text="未绑定"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true" />


</LinearLayout>
