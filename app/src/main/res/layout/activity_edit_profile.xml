<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <!--android:background="@color/colorBackgroundWhite"-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_centerVertical="true"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rel_edit_avatar"
        android:onClick="onclick"
        style="@style/ListItemRel"
        android:clickable="true"
       >
        <TextView
            android:id="@+id/text_sys"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="更换头像" />

        <ImageView
            android:id="@+id/imageView1"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right" />

        <com.xiaolian.amigo.tmp.component.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/imageView1"

            android:src="@drawable/default_avatar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee"
            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_nickname"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_wallet"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            />


        <ImageView
            android:id="@+id/imageView2"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView2"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_sex"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_sex"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="性别" />


        <ImageView
            android:id="@+id/imageView3"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView3"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_mobile"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_mobile"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="手机号" />


        <ImageView
            android:id="@+id/imageView4"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_mobile"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView4"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_edit_password"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_password"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="账号密码" />


        <ImageView
            android:id="@+id/imageView5"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView5"
            android:text="修改密码"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_school"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_school"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="学校" />


        <ImageView
            android:id="@+id/imageView6"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_school"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView6"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_edit_room"
        android:onClick="onclick"
        style="@style/ListItemRel">

        <TextView
            android:id="@+id/text_room"
            style="@style/ListItemMainText"
            android:layout_marginLeft="10dp"
            android:text="宿舍信息" />

        <ImageView
            android:id="@+id/imageView7"
            style="@style/ListItemImage"
            android:layout_alignParentRight="true"

            android:src="@drawable/arrow_right" />

        <TextView
            android:id="@+id/tv_residence"
            style="@style/ListItemSubText"
            android:layout_toLeftOf="@id/imageView7"
            android:text="未绑定"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>

</LinearLayout>
