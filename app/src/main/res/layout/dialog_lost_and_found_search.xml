<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBackgroundGray"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_search"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_marginStart="21dp"
            android:background="@color/color_bg_gray_f8">

            <EditText
                android:layout_width="276dp"
                android:layout_height="29dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="9dp"
                android:background="@drawable/social_search_tv_bg"
                android:paddingLeft="14dp"
                android:textSize="13sp"
                android:id="@+id/et_search_content"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorDarkB"
                android:textColor="@color/colorDark2"
                android:hint="@string/social_search_hint"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/et_search_content"
                android:textSize="13sp"
                android:id="@+id/tv_cancel"
                android:paddingStart="14dp"
                android:paddingEnd="20dp"
                android:textColor="@color/colorDark2"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/colorBackgroundGray"
        android:visibility="gone">
        <ImageView
            android:id="@+id/iv_empty"
            android:src="@drawable/ic_empty_box"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_no_result_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_search_result"
            android:textSize="14sp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorDark2"
            android:layout_below="@id/iv_empty"
            android:layout_marginTop="14dp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fl_result_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>