<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBackgroundWhite"
        android:paddingLeft="@dimen/mainMarginLeftRight"
        android:paddingRight="@dimen/mainMarginLeftRight"
        >

        <ImageView
            android:paddingTop="14dp"
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:paddingRight="40dp"
            android:src="@drawable/back" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            >

            <EditText
                android:id="@+id/et_search_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:hint="关键字搜索"
                android:textColor="#222"
                android:textColorHint="#bbb"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="#222"
                android:textSize="14sp" />

            <View
                android:id="@+id/v_divide"
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/tv_cancel"
                android:background="#ccc" />

            <ImageView
                android:id="@+id/iv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/v_divide"
                android:src="@drawable/clear"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:background="@color/colorBackgroundGray"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无结果"
            android:textSize="19sp"
            android:textColor="#999"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_no_result_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未找到任何与'雨伞'相关的内容"
            android:textSize="14sp"
            android:textColor="#999"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_no_result"
            android:layout_marginTop="14dp"/>
    </RelativeLayout>

    <FrameLayout
        android:background="@color/colorBackgroundGray"
        android:id="@+id/fl_result_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>