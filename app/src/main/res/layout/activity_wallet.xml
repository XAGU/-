<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mainMarginLeftRight"
    android:paddingRight="@dimen/mainMarginLeftRight"
    android:paddingTop="14dp">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="40dp"
        android:src="@drawable/back" />

    <TextView
        style="@style/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="24dp"
        android:text="我的钱包" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_centerVertical="true"
        android:background="#eee" />

    <TextView
        style="@style/ContentText_main"
        android:layout_marginTop="21dp"
        android:text="可用余额" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <TextView
            style="@style/Money_Upper"
            android:layout_alignParentLeft="true"
            android:text="￥120" />

        <ImageView
            android:id="@+id/iv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/wallet_recharge"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_centerVertical="true"
        android:layout_marginTop="21dp"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rl_prepay"
        android:layout_width="wrap_content"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_prepay_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            style="@style/Money_Normal"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_prepay_forward"
            android:text="￥10" />


        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="预付金额" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_centerVertical="true"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rl_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_withdrawal_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="我要提现" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_centerVertical="true"
        android:background="#eee" />

</LinearLayout>