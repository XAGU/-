<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackgroundWhite"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <TextView
        style="@style/ContentText_main"
        android:layout_marginTop="21dp"
        android:text="可用余额" />

    <RelativeLayout
        android:id="@+id/rl_recharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp">

        <TextView
            android:id="@+id/tv_balance"
            style="@style/Money_Upper"
            android:layout_alignParentLeft="true"
            />

        <ImageView
            android:id="@+id/iv_recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/wallet_recharge"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginTop="21dp"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rl_giving_balance"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_balance_present"
                android:textSize="14sp"
                android:textColor="#999"
                tools:text="赠送的余额: ¥111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:textColor="#999"
                android:id="@+id/tv_withdraw_available"
                tools:text="可提现的余额: ¥111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/v_question"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_question"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_question_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_prepay"
        android:layout_width="wrap_content"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_prepay_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            android:id="@+id/tv_prepay"
            style="@style/Money_Normal"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_prepay_forward"
            />


        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="预付金额" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rl_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_withdrawal_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="我要提现" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rl_withdrawal_record"
        android:layout_width="wrap_content"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_withdrawal_record_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="充值提现记录" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

</LinearLayout>