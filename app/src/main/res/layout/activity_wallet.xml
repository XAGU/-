<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackgroundWhite"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="162dp">

        <ImageView
            android:id="@+id/image_wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/qianbao"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            />
        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:layout_marginTop="50dp"
            android:layout_marginStart="21dp"
            />
        <TextView
            android:id="@+id/tv_balance"
            style="@style/Money_Upper"
            android:textColor="@color/colorDark2"
            android:layout_marginTop="80dp"
            android:layout_marginStart="21dp"
            tools:text="94.05"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_giving_balance"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="85dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_balance_present"
                android:textSize="14sp"
                android:textColor="@color/colorDarkB"
                tools:text="赠送的余额: ¥111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="14dp"
                android:textSize="14sp"
                android:textColor="@color/colorDarkB"
                android:id="@+id/tv_withdraw_available"
                tools:text="可提现的余额: ¥111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:id="@+id/v_question"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_question"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_question_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_prepay"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_prepay_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            android:id="@+id/tv_prepay"
            style="@style/Money_Normal"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_prepay_forward"
            />


        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="预付金额" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_recharge"
        android:layout_width="wrap_content"
        android:layout_height="58dp">

        <ImageView
            android:id="@+id/iv_order_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="充值" />

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_withdrawal"
        android:layout_width="wrap_content"
        android:layout_height="59dp">

        <ImageView
            android:id="@+id/iv_withdrawal_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward" />

        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="退款" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_bill_record"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="-11dp"
        android:layout_marginEnd="-11dp">

        <ImageView
            android:id="@+id/iv_bill_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/forward"
            android:paddingEnd="11dp"/>

        <TextView
            style="@style/ContentText_main"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="账单"
            android:paddingStart="11dp"/>

    </RelativeLayout>

</LinearLayout>