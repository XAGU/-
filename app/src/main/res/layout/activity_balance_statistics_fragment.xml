<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorDarke" />

            <TextView
                android:id="@+id/tv_monthly_order_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="22dp"
                android:drawableRight="@drawable/spread"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorDark2"
                android:textSize="13sp"
                tools:text="2018年5月" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="21dp"
            android:background="@drawable/bg_monthly_bill"
            android:orientation="vertical"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <TextView
                android:id="@+id/tv_total_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDark2"
                android:textSize="14sp"
                tools:text="余额充值：123" />

            <TextView
                android:id="@+id/tv_total_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDark2"
                android:textSize="14sp"
                tools:text="余额退款：123" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorDarke" />

            <TextView
                android:id="@+id/tv_total_consume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDark2"
                android:textSize="14sp"
                tools:text="实际消费：123" />

            <TextView
                android:id="@+id/tv_total_consume_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorDark2"
                android:textSize="14sp"
                tools:text="消费退款：123" />

            <com.xiaolian.amigo.ui.widget.MonthlyBillView
                android:id="@+id/monthlyBillView"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tv_max_consume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@color/colorDark2"
                android:textSize="14sp"
                tools:text="单笔消费最贵：123" />

        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>