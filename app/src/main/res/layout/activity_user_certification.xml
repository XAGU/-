<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/sv_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="42dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:paddingTop="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_toolbar_title"
                    style="@style/ToolBarTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/toolBarMarginBottom"
                    android:layout_marginLeft="@dimen/toolBarMarginLeft"
                    android:layout_marginRight="@dimen/toolBarMarginLeft"
                    android:text="@string/user_certification_title" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:layout_marginEnd="21dp">


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line"
                    android:background="@color/colorDarke" />

                <RelativeLayout
                    android:id="@+id/rel_edit_department"
                    style="@style/ListItemRel"
                    android:layout_below="@id/line">

                    <TextView
                        style="@style/ListItemMainText"
                        android:layout_marginLeft="10dp"
                        android:text="院系"
                        />


                    <ImageView
                        android:id="@+id/imageView2"
                        style="@style/ListItemImage"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/tv_department"
                        style="@style/ListItemSubText"
                        android:layout_width="250dp"
                        tool:text="范德萨发发发"
                        android:layout_toLeftOf="@id/imageView2"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:background="#eee" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_edit_profession"
                    style="@style/ListItemRel"
                    android:layout_below="@id/rel_edit_department">

                    <TextView
                        style="@style/ListItemMainText"
                        android:layout_marginLeft="10dp"
                        android:text="专业"
                        />


                    <ImageView
                        android:id="@+id/imageView3"
                        style="@style/ListItemImage"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/tv_profession"
                        style="@style/ListItemSubText"
                        android:layout_width="250dp"
                        android:layout_toLeftOf="@id/imageView3"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:background="#eee" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_edit_grade"
                    style="@style/ListItemRel"
                    android:layout_below="@id/rel_edit_profession">

                    <TextView
                        style="@style/ListItemMainText"
                        android:layout_marginLeft="10dp"
                        android:text="年级"
                        />


                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/ListItemImage"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/tv_grade"
                        style="@style/ListItemSubText"
                        android:layout_width="250dp"
                        android:layout_toLeftOf="@id/imageView4"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:background="#eee" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_edit_class"
                    android:layout_below="@id/rel_edit_grade"
                    style="@style/ListItemRel">

                    <TextView
                        style="@style/ListItemMainText"
                        android:layout_marginLeft="10dp"
                        android:text="班级"
                        />


                    <ImageView
                        android:id="@+id/imageView5"
                        style="@style/ListItemImage"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/tv_class"
                        style="@style/ListItemSubText"
                        android:layout_width="250dp"
                        android:layout_toLeftOf="@id/imageView5"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:background="#eee" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_edit_studentId"
                    android:layout_below="@id/rel_edit_class"
                    style="@style/ListItemRel">

                    <TextView
                        style="@style/ListItemMainText"
                        android:layout_marginLeft="10dp"
                        android:text="学号"
                        />


                    <ImageView
                        android:id="@+id/imageView6"
                        style="@style/ListItemImage"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/tv_studentId"
                        style="@style/ListItemSubText"
                        android:layout_width="250dp"
                        android:layout_toLeftOf="@id/imageView6"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:background="#eee" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_edit_dormitory"
                    android:layout_below="@id/rel_edit_studentId"
                    style="@style/ListItemRel"
                    android:layout_marginBottom="50dp">

                    <TextView
                        style="@style/ListItemMainText"
                        android:layout_marginLeft="10dp"
                        android:text="宿舍"
                        />


                    <ImageView
                        android:id="@+id/imageView7"
                        style="@style/ListItemImage"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/arrow_right" />

                    <TextView
                        android:id="@+id/tv_dormitory"
                        style="@style/ListItemSubText"
                        android:layout_width="250dp"
                        android:layout_toLeftOf="@id/imageView7"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_centerVertical="true"
                        android:background="#eee" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/colorDark2"
                    android:text="上传学生证照片"
                    android:layout_below="@id/rel_edit_dormitory"
                    android:id="@+id/submit_card_txt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 照片内个人信息必须清晰可见"
                    android:layout_alignBottom="@id/submit_card_txt"
                    android:layout_toRightOf="@id/submit_card_txt"
                    android:textSize="12sp"
                    android:textColor="@color/colorFullRed"
                    android:layout_marginLeft="10dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="21dp"
                    android:id="@+id/student_card_ll"
                    android:layout_below="@id/submit_card_txt">

                    <android.support.v7.widget.RecyclerView
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/rv_image"
                        android:overScrollMode="never"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <LinearLayout
                        android:visibility="gone"
                        tool:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:id="@+id/iv_first"
                            android:layout_width="78dp"
                            android:layout_height="55dp"
                            android:background="@drawable/dotted_box"
                            android:src="@drawable/student_tip"
                            android:scaleType="centerInside"
                            tool:visibility="visible"
                            android:layout_gravity="center_vertical"/>

                        <ImageView
                            android:id="@+id/iv_second"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:background="@drawable/dotted_box"
                            android:src="@drawable/image_add"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone"
                            tool:visiblity="visible"/>

                        <ImageView
                            android:id="@+id/iv_third"
                            android:layout_width="94dp"
                            android:layout_height="94dp"
                            android:background="@drawable/dotted_box"
                            android:src="@drawable/image_add"
                            android:scaleType="centerInside"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone"
                            tool:visibility="visible"/>

                    </LinearLayout>

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="上传身份证照片"
                    android:id="@+id/card_txt"
                    android:textColor="@color/colorDark2"
                    android:layout_below="@id/student_card_ll"
                    android:layout_marginBottom="21dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_below="@id/card_txt">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:id="@+id/front_card_rl"
                    android:background="@drawable/dotted_box"
                    android:layout_marginBottom="21dp"
                    android:layout_below="@id/card_txt"
                    >

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/id_card_front"
                        android:scaleType="centerCrop"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="14dp"
                        android:id="@+id/id_card_front_tip"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="点击添加正面"
                        android:id="@+id/tv_front_card"
                        android:textColor="@color/colorDarkB"
                        android:layout_below="@id/id_card_front_tip"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iv_front_card"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="94dp"
                    android:layout_weight="1"
                    android:id="@+id/back_card_rl"
                    android:layout_below="@id/card_txt"
                    android:layout_toEndOf="@id/front_card_rl"
                    android:background="@drawable/dotted_box"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="21dp"
                    >

                    <ImageView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/id_card_back"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="11dp"
                        android:layout_marginEnd="11dp"
                        android:id="@+id/id_card_back_tip"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:text="点击添加反面"
                        android:id="@+id/tv_back_card"
                        android:textColor="@color/colorDarkB"
                        android:layout_below="@id/id_card_back_tip"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/iv_back_card"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorDark9"
                android:text="@string/upload_tip"
                android:layout_marginTop="8dp"
                android:layout_marginStart="19dp"
                />
        </LinearLayout>

    </ScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/button_rect_red"
            android:text="提交认证"
            android:id="@+id/certify"
            android:textSize="17sp"
            android:layout_marginBottom="21dp"
            android:layout_marginStart="21dp"
            android:layout_marginEnd="21dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:stateListAnimator="@null"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_toolbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp15"
            android:textStyle="bold"
            android:textColor="#222"
            android:text="@string/user_certification_title"
            android:visibility="gone"/>


        <View
            android:id="@+id/view_line"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#d6d6d6"/>
    </RelativeLayout>
</FrameLayout>
