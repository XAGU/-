<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mainMarginLeftRight"
    android:paddingRight="@dimen/mainMarginLeftRight">

    <ScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingRight="40dp"
                android:paddingBottom="24dp"
                android:src="@drawable/back" />

            <TextView
                style="@style/TitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="21dp"
                android:text="消费账单" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundWhite"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="使用时间" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="设备信息" />

                    <TextView
                        android:id="@+id/tv_device_info"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="订单号" />

                    <TextView
                        android:id="@+id/tv_order_no"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="支付方式" />

                    <TextView
                        android:id="@+id/tv_pay_method"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="找零金额" />


                    <TextView
                        android:id="@+id/tv_change_amount"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorDark2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥"
                        android:textColor="@color/colorDark2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/tv_change_amount"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="实际消费" />

                    <TextView
                        android:id="@+id/tv_amount"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textColor="@color/colorFullRed"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_unit"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥"
                        android:textColor="@color/colorFullRed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/tv_amount"/>

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_order_free"
                        android:layout_toLeftOf="@id/tv_unit"
                        android:src="@drawable/ic_order_free"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_centerVertical="true"
                    android:background="#eee" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_centerVertical="true" />
            </LinearLayout>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginTop="21dp"-->
                <!--android:layout_marginBottom="21dp"-->
                <!--android:text="@string/prepay_order_tip"-->
                <!--android:textColor="#999"-->
                <!--android:textSize="12sp" />-->
            <Button
                android:id="@+id/bt_ok"
                style="@style/Button"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="14dp"
                android:text="朕知道了"
                android:enabled="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>