<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackgroundGray">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white"
        app:layout_collapseMode="pin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableEnd="@drawable/arrow_down"
                android:drawablePadding="6dp"
                tools:text="123公寓4栋"
                android:textColor="#222"
                android:textSize="@dimen/sp15"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/mainMarginLeftRight"
                android:src="@drawable/ic_help" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="@dimen/mainMarginLeftRight"
                android:layout_marginStart="@dimen/mainMarginLeftRight"
                android:background="@color/colorDarke"
                android:visibility="visible" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/tool_bar"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/mainMarginLeftRight"
        android:paddingStart="@dimen/mainMarginLeftRight">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/bg_bathroom_item_available" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="可选"
                android:textColor="@color/colorDark9"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/bg_bathroom_item_using" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="使用中"
                android:textColor="@color/colorDark9"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/bg_bathroom_item_choosed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="选中"
                android:textColor="@color/colorDark9"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/bg_bathroom_item_error" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:text="异常"
                android:textColor="@color/colorDark9"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@id/ll_top"
        android:gravity="center">

        <com.xiaolian.amigo.ui.widget.ZoomRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:overScrollMode="never"
            android:paddingEnd="21dp"
            android:paddingStart="21dp" />

    </LinearLayout>

    <Button
        android:enabled="true"
        android:id="@+id/pre_bathroom"
        android:layout_marginTop="21dp"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:background="@drawable/button_enable"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/mainMarginLeftRight"
        android:layout_marginEnd="@dimen/mainMarginLeftRight"
        android:textStyle="bold"
        android:text="@string/preBathWithAnyEmptyBath"
        tools:text="预约洗澡（任意空浴室）"
        android:stateListAnimator="@null"
        android:layout_alignParentBottom="true"
        />

    <!--<com.xiaolian.amigo.ui.widget.MetaBallView-->
        <!--android:id="@+id/metaBall"-->
        <!--android:background="@drawable/bg_choose_bathroom"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"/>-->



</RelativeLayout>