<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundGray"
    android:orientation="vertical"
    android:paddingLeft="@dimen/mainMarginLeftRight"
    android:paddingRight="@dimen/mainMarginLeftRight">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="14dp"
                android:paddingRight="40dp"
                android:paddingBottom="24dp"
                android:src="@drawable/back" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/TitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:text="消费账单" />
                <TextView
                    android:id="@+id/tv_complaint"
                    android:text="我要投诉"
                    android:textSize="14sp"
                    android:textColor="@color/colorDark2"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBackgroundWhite"
                android:orientation="vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="使用时间" />

                    <TextView
                        android:id="@+id/tv_time"
                        style="@style/ContentText_main"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        android:id="@+id/tv_location_title"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="设备位置" />

                    <TextView
                        android:id="@+id/tv_device_location"
                        android:layout_toRightOf="@id/tv_location_title"
                        style="@style/ContentText_main"
                        android:gravity="right"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="订单号" />

                    <TextView
                        android:id="@+id/tv_copy"
                        android:text="复制"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorBlue"
                        android:paddingLeft="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <View
                        android:id="@+id/v_divide"
                        android:layout_toLeftOf="@id/tv_copy"
                        android:layout_marginLeft="7dp"
                        android:background="#e5e5e5"
                        android:layout_centerVertical="true"
                        android:layout_width="1dp"
                        android:layout_height="14dp"/>

                    <TextView
                        android:layout_toLeftOf="@id/v_divide"
                        android:id="@+id/tv_order_no"
                        style="@style/ContentText_main"
                        android:textSize="11sp"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="58dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="支付方式" />

                    <TextView
                        android:id="@+id/tv_pay_method"
                        style="@style/ContentText_main"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rl_odd"
                    android:layout_width="match_parent"
                    android:layout_height="59dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="#eee" />
                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="找零金额" />

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/tv_change_amount"/>

                    <TextView
                        android:id="@+id/tv_change_amount"
                        style="@style/ContentText_main"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#666"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#eee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="117dp">

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:gravity="center"
                        android:layout_alignParentLeft="true"
                        android:text="实际消费" />

                    <TextView
                        android:id="@+id/tv_amount"
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:textColor="@color/colorFullRed"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/ContentText_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥"
                        android:visibility="gone"
                        android:textColor="@color/colorFullRed"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_toLeftOf="@id/tv_amount"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_centerVertical="true"
                        android:background="#eee" />

                    <ImageView
                        android:id="@+id/iv_order_free"
                        android:layout_toLeftOf="@id/tv_amount"
                        android:src="@drawable/ic_order_free"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>