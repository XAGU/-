<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_main"
    android:background="@color/colorBackgroundWhite"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:background="#eee" />

            <RelativeLayout
                android:id="@+id/rl_device"
                android:layout_width="wrap_content"
                android:layout_height="58dp">

                <TextView
                    style="@style/ContentText_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设备信息：" />

                <ImageView
                    android:id="@+id/iv_forward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/forward" />

                <TextView
                    android:id="@+id/tv_location"
                    style="@style/ContentText_value_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/iv_forward"
                    android:text="未选择" />

            </RelativeLayout>

            <View
                android:id="@+id/v_divide"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:background="#eee"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_problems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    style="@style/ContentText_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:text="常见问题：" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_problems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="21dp"
                    android:layout_marginTop="21dp"
                    android:overScrollMode="never" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:background="#eee" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="102dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ContentText_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="添加图片：" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_first"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_vertical"
                        android:background="#dddddd"
                        android:scaleType="centerInside"
                        android:src="@drawable/device_picture_add" />

                    <ImageView
                        android:id="@+id/iv_second"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="#dddddd"
                        android:scaleType="centerInside"
                        android:src="@drawable/device_picture_add"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_third"
                        android:layout_width="57dp"
                        android:layout_height="57dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:background="#dddddd"
                        android:scaleType="centerInside"
                        android:src="@drawable/device_picture_add"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:background="#eee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/ContentText_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:text="联系电话：" />

                <EditText
                    android:id="@+id/et_tel"
                    style="@style/EditText_No_Border_Lg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="请输入你的电话号码"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_centerVertical="true"
                android:background="#eee" />

            <EditText
                android:id="@+id/et_content"
                style="@style/EditText_No_Border_Lg"
                android:layout_width="match_parent"
                android:layout_height="134dp"
                android:layout_marginTop="21dp"
                android:background="#f5f5f5"
                android:gravity="start"
                android:hint="请简要填写报修内容"
                android:maxLength="@integer/publish_content_max_length"
                android:padding="14dp" />

        </LinearLayout>

    <LinearLayout
        android:layout_below="@id/ll_content"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <Button
            android:layout_above="@id/v_holder"
            android:id="@+id/bt_submit"
            style="@style/Button"
            android:layout_marginTop="14dp"
            android:background="@drawable/button_disable"
            android:enabled="true"
            android:text="提交申请" />

        <View
            android:id="@+id/v_holder"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainMarginLeftRight"/>

    </LinearLayout>


</RelativeLayout>