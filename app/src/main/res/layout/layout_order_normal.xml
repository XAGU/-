<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_order_normal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/rl_use_bonus"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee" />

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/use_bonus_colon" />

        <TextView
            android:id="@+id/tv_bonus_remark"
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#666"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp">

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/prepay_money_colon" />

        <TextView
            android:id="@+id/tv_pay_method"
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#666" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#eee" />

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/real_pay_colon" />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#666"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/rl_odd"
        android:layout_width="match_parent"
        android:layout_height="117dp">

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:text="@string/change_amount_colon" />

        <TextView
            android:id="@+id/tv_change_amount"
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/colorFullRed"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            style="@style/ContentText_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_change_amount"
            android:text="ï¿¥"
            android:textColor="@color/colorFullRed"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_centerVertical="true"
            android:background="#eee" />

    </RelativeLayout>


</LinearLayout>