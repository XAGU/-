<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
   <TextView
       android:paddingStart="20dp"
       android:paddingEnd="20dp"
       android:text="正在发表评论"
       android:textSize="12sp"
       android:background="#f5f5f5"
       android:gravity="center_vertical"
       android:textColor="@color/colorDark2"
       android:layout_width="match_parent"
       android:layout_height="38dp" />
    <View
        android:background="#d6d6d6"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:id="@+id/et_comment"
            android:background="@drawable/bg_lost_and_found_comment_input"
            android:layout_width="0dp"
            android:scrollbars="vertical"
            android:layout_weight="1"
            android:maxHeight="115dp"
            android:hint="请输入内容..."
            android:textColorHint="#bbb"
            android:minHeight="47dp"
            android:maxLines="1"
            android:maxLength="@integer/lost_found_comment_content_max_length"
            android:inputType="textMultiLine"
            android:layout_height="wrap_content" />
        <TextView
            android:enabled="false"
            android:id="@+id/tv_send"
            android:text="发送"
            android:gravity="center"
            android:textColor="#499bff"
            android:layout_width="57dp"
            android:layout_height="47dp" />
    </LinearLayout>

</LinearLayout>