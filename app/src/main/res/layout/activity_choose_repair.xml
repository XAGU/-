<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:background="@color/colorDarke"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_heater"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:text="@string/heater"
            android:id="@+id/tv_heater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentText_main"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_heater_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_lg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <View
        android:background="@color/colorDarke"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_dispenser"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">
        <TextView
            android:text="@string/dispenser"
            android:id="@+id/tv_dispenser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentText_main"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/iv_dispenser_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_lg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <View
        android:background="@color/colorDarke"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:layout_marginTop="43dp"
        android:layout_marginBottom="15dp"
        style="@style/ContentText_main"
        android:text="@string/quick_choose_colon"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:background="@color/colorDarke"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_default_dormitory"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:text="@string/device_in_my_default_dormitory"
            android:id="@+id/tv_default_dormitory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentText_main"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_default_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_lg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <View
        android:background="@color/colorDarke"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:id="@+id/rl_favorite"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:text="@string/my_favorite_device"
            android:id="@+id/tv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/ContentText_main"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_favorite_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/choose_lg"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <View
        android:background="@color/colorDarke"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>