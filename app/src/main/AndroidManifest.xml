<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xiaolian.amigo">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>e
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application
        android:name="com.xiaolian.amigo.MvpApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme">

        <!--订单列表-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.order.OrderActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--订单详情-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.order.OrderDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--我收藏的设备-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.favorite.FavoriteActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--设备报修-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.repair.RepairActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <!--设备报修nav-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.repair.RepairNavActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTask"/>

        <!--报修详情-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.repair.RepairDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--报修申请-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.repair.RepairApplyActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>


        <!--设备类型-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.repair.RepairDeviceTypeActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--web页面-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.base.WebActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--编辑个人信息页面-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.user.EditProfileActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--编辑昵称页面-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.user.EditNickNameActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--修改手机号-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.user.EditMobileActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--修改账户密码-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.user.EditPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--列表选择页面-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.user.ListChooseActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--红包页面-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.bonus.BonusActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--兑换红包-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.bonus.BonusExchangeActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--过期红包-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.bonus.ExpiredBonusActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--我的钱包-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.wallet.WalletActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--失物招领-->
        <activity android:name=".ui.lostandfound.LostAndFoundActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--剪裁页面-->
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>

        <!--宿舍列表-->
        <activity android:name=".ui.user.EditDormitoryActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--找回密码步骤一-->
        <activity android:name=".ui.login.PasswordRetrievalStep1Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--找回密码步骤二-->
        <activity android:name=".ui.login.PasswordRetrievalStep2Activity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--登录页面-->
        <activity android:name=".ui.login.LoginActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateVisible|adjustResize"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--热水器设备页-->
        <activity android:name=".ui.device.heater.HeaterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--选择饮水机页面-->
        <activity android:name=".ui.device.dispenser.ChooseDispenserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--饮水机页面-->
        <activity android:name=".ui.device.dispenser.DispenserActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--充值金额页面-->
        <activity android:name=".ui.wallet.RechargeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--失物招领详情-->
        <activity android:name=".ui.lostandfound.LostAndFoundDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--我的发布-->
        <activity android:name=".ui.lostandfound.MyPublishActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--失物发布-->
        <activity android:name=".ui.lostandfound.PublishLostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--招领发布-->
        <activity android:name=".ui.lostandfound.PublishFoundActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--报修评价-->
        <activity android:name=".ui.repair.RepairEvaluationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--图片浏览-->
        <activity android:name=".ui.widget.photoview.AlbumItemActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".ui.ble.BleActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".ui.ble.BleInteractiveActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <!--通知中心-->
        <activity android:name=".ui.notice.NoticeListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--通知详情-->
        <activity android:name=".ui.notice.NoticeDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--更换头像-->
        <activity android:name=".ui.user.EditAvatarActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--校验密码-->
        <activity android:name=".ui.user.CheckPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--设备账单-->
        <activity android:name=".ui.device.DeviceOrderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--提现-->
        <activity android:name=".ui.wallet.WithdrawalActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--预付金额-->
        <activity android:name=".ui.wallet.PrepayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--待找零账单-->
        <activity android:name=".ui.wallet.PrepayOrderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!--宿舍列表-->
        <activity android:name=".ui.user.ChooseDormitoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"/>


        <!--主页-->
        <activity
            android:screenOrientation="portrait"
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--兼容API24的provider-->
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.xiaolian.amigo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
    </application>

</manifest>